<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="module_view_kanban" model="ir.ui.view">
            <field name="name">Modules Kanban</field>
            <field name="model">ir.module.module</field>
            <field name="type">kanban</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="base.module_view_kanban" />
            <field name="arch" type="xml">
                <xpath expr="//img" position="before">
                    <div class="odoo_development">
                        <field
                            name="favourite"
                            widget="boolean_favorite"
                            nolabel="1"
                            force_save="1"
                            class="pull-right" />
                    </div>
                </xpath>
                <xpath expr="//span[@t-if='installed']" position="replace">
                    <button t-if='installed'
                            name="button_immediate_upgrade"
                            states="installed"
                            type="object"
                            class="btn btn-success pull-right btn-sm">
                        Upgrade
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
